<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_Home_Activity">


    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/red" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/stu_image_id"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="247dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_person"
        app:c_border="true"
        app:c_border_color="#EDF41A"
        app:c_border_width="5dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_img"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp">


     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <TextView
             android:id="@+id/tv_name"
             android:layout_width="250dp"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginStart="11dp"
             android:layout_marginTop="15dp"
             android:text="Name"
             android:textColor="@color/black"
             android:textSize="25sp"
             android:ellipsize="marquee"
             android:textStyle="bold"
             android:singleLine="true"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="70dp"
            android:text="Course"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="70dp"
            android:text="Course"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="110dp"
            android:text="Branch"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="15dp"
            android:text="Branch"
            android:ellipsize="marquee"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="15sp"
            android:text="shubhamsukla44@gmail.com"
            android:textSize="15sp" />

     </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sem_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/btn_timetable"
        >


        <LinearLayout
            android:id="@+id/id_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/btn_timetable"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="105dp"
                android:layout_height="130dp"
                android:background="@drawable/relative_l_box_1">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="18dp"
                    android:text="Admission Number"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_add_no"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="22dp"
                    android:text="Set here"
                    android:textAlignment="center"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="105dp"
                android:layout_height="130dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/relative_l_box_1">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:text="Semester"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:text="Section"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_sem_no"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="15dp"
                    android:text="Set here"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_section"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="15dp"
                    android:text="Set here"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="330dp"
                android:background="@drawable/relative_l_box_1">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="University RollNo"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_university_rollno"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-2dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginBottom="5dp"
                    android:text="Set here"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:id="@+id/attendance_layout"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/sem_sec"
        android:background="@color/black"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/grey_2"
            android:text="Attendance %"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_attendance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/green"
            android:text="1"
            android:textAlignment="center"
            android:textSize="35sp"
            />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_timetable"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_cor_grey"
        android:text="Time Table"
        android:textColor="@color/black"

        />

    <Button
        android:id="@+id/btn_all_info"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/aboutshowbody"
        android:text="All Info" />

    <Button
        android:id="@+id/btn_ct_details"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:background="#DC6F10"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="CT Details" />

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="18dp"
        android:text="Sign Out"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:text="Date Time"
        android:textColor="#ffffff"
        android:background="@color/black"/>




</RelativeLayout>