<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Home_Activity">


    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/teacher_image_id"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="615dp"
        android:src="@drawable/ic_person"
        app:c_border="true"
        app:c_border_color="#EDF41A"
        app:c_border_width="5dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="140sp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFF5C32"
            android:layout_margin="10dp"

            >

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_teacher_department"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="Branch"
        android:textAlignment="center"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/tv_teacher_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:text="Teacher Id"
        android:textAlignment="center"
        android:textSize="16sp"

        />

    <Button
        android:id="@+id/btn_all_info"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="All Info" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sel_class_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="280dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cor_blue"
            android:layout_margin="10dp"
            android:padding="5dp"
            >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Select Class"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/sel_class"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Click here"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/class_sel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:layout_below="@id/sel_class"
        android:background="@color/yellow"
        >

        <TextView
            android:id="@+id/class_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="class_1"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/class_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="class_2"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/class_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="class_3"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/class_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="class_4"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/class_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="class_5"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>


      </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sel_class_card"
        android:layout_margin="10dp"
        android:background="@drawable/btn_cor_grey"
        >


    <TextView
        android:id="@+id/tv_current_period_h"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Current Period"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_current_period"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="5dp"
        android:hint="Current_Period"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

    </RelativeLayout>


</RelativeLayout>

