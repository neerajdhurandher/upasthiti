<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".Take_Attendance_Activity"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/aboutshowbody">



    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#98A0A3"
        android:layout_margin="8dp"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cor_yellow"
                android:layout_margin="10dp"
                >

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/stu_image_id"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_person"
                app:c_border="true"
                app:c_border_color="#EDF41A"
                app:c_border_width="5dp"

                />

                <TextView
                    android:id="@+id/tv_name_as"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/red"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Full lenght Name"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:maxLines="1"/>

                <TextView
                android:id="@+id/tv_branch_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="20dp"
                android:text="Branch"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/clg_rollno_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_below="@id/name_card"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cor_blue"
            android:layout_margin="10dp"
            android:paddingBottom="15dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="19dp"
                android:background="@color/orange_1"
                android:padding="5dp"
                android:text="Subject Name"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_subject_name_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="211dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="80dp"
                android:background="@color/pink_2"
                android:padding="5dp"
                android:text="College RollNo"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_clg_rollno_as"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="219dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="5dp"
                android:text="here"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/total_att_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "10dp"
            android:layout_alignParentBottom="true"

            >

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:text="Total Attendance %"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:background="@drawable/aboutshowbody"
            />

            <TextView
                android:id="@+id/tv_total_attendance_as"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:background="@color/green"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="200dp"
            android:background="@color/white"
            android:text="Subject Attendance %"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_subject_attendance_as"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="140dp"
            android:background="@color/green"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="200dp"
            android:background="@color/white"
            android:text="Number of Lecture Attend"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_num_attend_lec_as"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="140dp"
            android:background="#6DDCCF"
            android:text="1"
            android:textAlignment="center"
            android:textSize="30sp" />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
